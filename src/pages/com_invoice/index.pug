aside.right-side
    section.content-header
        h1
            | Invoice
        ol.breadcrumb
            li
                router-link(to='/admin')
                    i.fa.fa-dashboard
                    |  Dashboard
            li.active Invoice
    section.content
        .row
            .col-xs-12
                .box
                    .box-body
                        div.text-center(v-if='dataLoad')
                            i.fa.fa-refresh.fa-spin.fa-3x.fa-fw
                        h3.text-center(style='margin: 15px 0;' v-if='!dataLoad && invData === null')
                            | No Data Found!
                        div(style='padding:0;margin:0;' v-if='!dataLoad && invData !== null')
                            table(width='100%' style="background-color:#333333;color:whitesmoke;border-radius:5px;" cellpadding='20' cellspacing='0')
                                tbody
                                    tr
                                        td(height='50px' align='left')
                                            img(src='/images/roadio_logo_web.png', width='200', alt='Logo')
                                    tr
                                        td
                                            table(width='100%' align='center' cellspacing='0' style='font-family:"Helvetica","Arial",sans-serif')
                                                tbody
                                                    tr
                                                        td(style="border-left: 3px solid #fcd519;padding-left: 10px;")
                                                            h4 Invoice From:
                                                                br
                                                                | RoadioApp
                                                            a roadioapppak@gmail.com
                                                    tr
                                                        td
                                                            div(style="padding: 5px;")
                                                    tr
                                                        td(style="border-left: 3px solid #fcd519;padding-left: 10px;")
                                                            h4 Invoice To:
                                                                br
                                                                | {{ invData.driver_data.first_name+" "+invData.driver_data.last_name }}
                                                            a {{ invData.driver_data.email }}
                                                    tr
                                                        td(colspan='2' style="text-align:right;border-right: 3px solid #fcd519;padding-right: 10px;")
                                                            h4 Date: {{ invData.com_inv_data.createdAt }}
                                                            h4 Invoice #: {{ invData.com_inv_data.invoice_no }}
                                                    tr
                                                        td
                                                            div(style="padding: 5px;")
                                                    tr
                                                        td(style='vertical-align: top;')
                                                            table(width='100%' align='center' border=0 style="border: 2px solid;")
                                                                thead
                                                                    tr
                                                                        th(colspan='2' style="border: 2px solid;")
                                                                            h4(style="margin: 0;padding: 10px;text-align: left;") Commission Invoice
                                                                tbody
                                                                    tr
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | Order Detail
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | From({{ invData.req_data.orgText }}) To({{ invData.req_data.desText }})
                                                                    tr
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | Order Invoice
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            router-link(v-bind:to="'/admin/invoice/'+ invData.inv_data.inv_key") {{ "#"+invData.inv_data.invoice_no }}
                                                                    tr
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | Commission Apply
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | {{ invData.com_inv_data.apply_commission }}%
                                                                    tr
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | Commission Payable Amount
                                                                        td(style="border: 2px solid;padding: 5px;text-align:left;")
                                                                            | Rs.{{ invData.com_inv_data.commission_amount }}
                                                    tr
                                                        td
                                                            div(style="padding: 10px;")
                                                    tr
                                                        td(style="border-left: 3px solid #fcd519;padding-left: 10px;")
                                                            h4 Phone: 0303*******
                                                    tr
                                                        td
                                                            div(style="padding: 5px;")
                                                    tr
                                                        td(style="border-left: 3px solid #fcd519;padding-left: 10px;")
                                                            h4 Email:&nbsp;
                                                                a roadioapppak@gmail.com
                                                    tr
                                                        td
                                                            div(style="padding: 5px;")
                                                    tr
                                                        td(style="border-left: 3px solid #fcd519;padding-left: 10px;")
                                                            h4 Website:&nbsp;
                                                                a www.roadioapp.com

