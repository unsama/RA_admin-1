                                            p First Name
                                        .col-xs-6
                                            p {{ userData.first_name }}
                                    .col-md-12
                                        .col-xs-6
                                            p Last Name
                                        .col-xs-6
                                            p {{ userData.last_name }}
                                    .col-md-12
                                        .col-xs-6
                                            p Email
                                        .col-xs-6
                                            p {{ userData.email }}
                                    .col-md-12
                                        .col-xs-6
                                            p Password
                                        .col-xs-6
                                            p ********
                                    .col-md-12
                                        .col-xs-6
                                            p Mobile No.
                                        .col-xs-6
                                            p {{ userData.mob_no }}
