                                                    i.fa.fa-exclamation
                                                button.btn.btn-info.btn-sm.mar-bot-5(v-if='licenceImgLoad' disabled='disabled')
                                                    i.fa.fa-refresh.fa-spin.fa-fw
                                        .col-md-12
                                            .col-xs-6
                                                p Scanned Registration Letter
