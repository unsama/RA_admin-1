                                            .col-xs-6
                                                p {{ userData.cnic_no }}
                                        .col-md-12
                                            .col-xs-6
                                                p Driver License
                                            .col-xs-6
                                                p {{ userData.driving_license }}
                                        .col-md-12
                                            .col-xs-6
                                                p Adda Name
                                            .col-xs-6
